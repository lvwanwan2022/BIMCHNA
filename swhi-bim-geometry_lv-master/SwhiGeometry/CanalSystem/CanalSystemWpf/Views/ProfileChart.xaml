<Window x:Class="CanalSystem.Views.ProfileChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CanalSystem.Views" 
             mc:Ignorable="d" Title="渠道系统纵断面" Height="350"  Topmost="True" WindowStartupLocation="Manual" >
    <Grid>
        <Grid.ColumnDefinitions>            
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="1*"/>            
        </Grid.RowDefinitions> 
        <GroupBox Header="纵断面" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="15" Grid.RowSpan="2" BorderThickness="1" BorderBrush="Black">

            <WpfPlot Name="WpfPlot1" MouseMove="OnMouseMove" 
            MouseEnter="wpfPlot1_MouseEnter"
            MouseLeave="wpfPlot1_MouseLeave">
               
            </WpfPlot>
        </GroupBox>
        <Label Content="桩号:" Grid.Row="0" Grid.Column="0" FontWeight="Bold" HorizontalContentAlignment="Right"/>
        <Label Content="高程:" Grid.Row="0" Grid.Column="2" FontWeight="Bold" HorizontalContentAlignment="Right"/>
        <Label Name="XCoordinateLabel" Content="123.456" Grid.Row="0" Grid.Column="1" FontFamily="consolas" />
        <Label Name="YCoordinateLabel" Content="123.456" Grid.Row="0" Grid.Column="3" FontFamily="consolas" />
        
        <!--<Label Content="Pixel" Grid.Row="0" Grid.Column="4" FontWeight="Bold" Width="100"/>-->
        <Label Content="地面线高程：" Grid.Row="0" Grid.Column="5" FontWeight="Bold" HorizontalContentAlignment="Right"/>
        <Label Content="水面线高程:" Grid.Row="0" Grid.Column="7" FontWeight="Bold" HorizontalAlignment="Right"/>
        <Label Name="XPixelLabel" Content="123.456" Grid.Row="0" Grid.Column="6" FontFamily="consolas" />
        <Label Name="YPixelLabel" Content="123.456" Grid.Row="0" Grid.Column="8" FontFamily="consolas" />
        <Label Name="MouseTrackLabel" Content="鼠标未追踪..." Grid.Row="0" Grid.Column="9" FontWeight="Bold"/>
        <CheckBox Content="锁定Y轴" Margin="5" Grid.Row="0" Grid.Column="11" Checked="VerticalLock" Unchecked="VerticalUnlock"/>
        <CheckBox Content="锁定X轴" Margin="5" Grid.Row="0" Grid.Column="10" Checked="HorizontalLock" Unchecked="HorizontalUnlock"/>
        <!--<CheckBox Name="CheckTrack" Content="平面线路追踪" Margin="5" Grid.Row="0" Grid.Column="12" Checked="TrackCenterline" Unchecked="UntrackCenterline"/>-->




    </Grid>
</Window>
