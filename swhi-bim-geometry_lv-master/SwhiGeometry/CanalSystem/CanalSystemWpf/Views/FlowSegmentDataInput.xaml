<Window 
    x:Class="CanalSystem.Views.FlowSegmentDataInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CanalSystem.Views"
        mc:Ignorable="d"
        Title="FlowSegmentDataInput" Height="800" Width="1200" Loaded="Window_Loaded" Topmost="True">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="1.2*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="207*"/>
            <ColumnDefinition Width="207*"/>
            <ColumnDefinition Width="499*"/>
            <ColumnDefinition Width="280*"/>
        </Grid.ColumnDefinitions>

        <!--<Grid Grid.Row="0" Grid.ColumnSpan="3"  >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="水面线文件:" VerticalAlignment="Center"></Label>
            <TextBox x:Name="Textboxfile" Grid.Column="1" TextWrapping="Wrap"  Text="TextBox" Height="22" VerticalAlignment="Center"/>
            <Button x:Name="ButtonOpenfile"  Grid.Column="2" Content="打开"  Margin="50,0,50,0" VerticalAlignment="Center" Click="ButtonOpenfile_Click"></Button>

        </Grid>-->
        <TextBox x:Name="textboxMessage" Grid.ColumnSpan="4" IsReadOnly="True" VerticalContentAlignment="Center" Text="message will be displayed  here!!"></TextBox>
        <GridSplitter Grid.Row="1" Grid.ColumnSpan="4" Height="3" Background="Gray" VerticalAlignment="Center" HorizontalAlignment="Stretch" ShowsPreview="False" Margin="0,9"></GridSplitter>
        <Grid Grid.Row="2" Grid.ColumnSpan="4">
            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Border Grid.ColumnSpan="4" BorderBrush="LightBlue" BorderThickness="1">
                <Label Content="流量段信息"    HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <!--<Button Grid.Column="3" Content="删除所选行" Click="Delete_Click"></Button>-->
        </Grid>

        <DataGrid x:Name="datagridFlowinfo" Grid.Row="3" Grid.ColumnSpan="4" Grid.RowSpan="4" CanUserDeleteRows="True">


        </DataGrid>
        <GridSplitter Grid.Row="7" Grid.ColumnSpan="4" Height="3" Background="Gray" VerticalAlignment="Center" HorizontalAlignment="Stretch" ShowsPreview="False" Margin="0,9"></GridSplitter>
        <Border  Grid.Row="8"  BorderBrush="LightBlue" BorderThickness="1">
            <Label Content="流量段名" VerticalAlignment="Center" ></Label>
        </Border>
        <ComboBox x:Name="ComboBoxSegNames"   Grid.Row="9"  VerticalContentAlignment="Center" SelectionChanged="ComboBoxSegNames_SelectionChanged"></ComboBox>

        <Border Grid.Row="8" Grid.Column="1" BorderBrush="LightBlue" BorderThickness="1">
            <Label Content="渠道类型" VerticalAlignment="Center" ></Label>
        </Border>


        <ComboBox x:Name="ComboBoxStructureType" Grid.Row="9" Grid.Column="1"  VerticalContentAlignment="Center" ></ComboBox>

        <DataGrid x:Name="dataGridSectionParameters" Grid.Row="8" Grid.Column="2" Grid.RowSpan="3" SelectedCellsChanged="dataGrid_SelectedCellsChanged" Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="设计水深" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="面积" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="湿周" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="水力半径" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="糙率" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="底坡" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="设计流量" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="设计流速" Width="*"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <TextBox x:Name="TextboxSegName" Text="" Grid.Row="10" Grid.Column="0" VerticalContentAlignment="Center">
            <TextBox.Resources>
                <VisualBrush x:Key="HintText" TileMode="None" Opacity="0.5" Stretch="None" AlignmentX="Left">
                    <VisualBrush.Visual>
                        <TextBlock FontStyle="Italic" Text="请输入需要添加的流量段名"/>
                    </VisualBrush.Visual>
                </VisualBrush>
            </TextBox.Resources>
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Style.Triggers>
                        <Trigger Property="Text" Value="{x:Null}">
                            <Setter Property="Background" Value="{StaticResource HintText}"/>
                        </Trigger>
                        <Trigger Property="Text" Value="">
                            <Setter Property="Background" Value="{StaticResource HintText}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>
        <Button x:Name="addFlowsegName"  Grid.Row="11" Grid.Column="0" Content="添加流量段" Margin="1" Click="addFlowsegName_Click"></Button>
        <Button x:Name="deleteFlowsegName"  Grid.Row="12" Grid.Column="0" Content="删除流量段" Margin="1" Click="deleteFlowsegName_Click"></Button>
        <Grid Grid.Row="11" Grid.Column="2" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button  Content="从剪贴板粘贴选区数据"  Margin="1" Click="pasteData_Click" ToolTipService.ToolTip="所选单元格应包含列标题"  ToolTipService.InitialShowDelay="1" ToolTipService.Placement="Top"></Button>
            <Button  Content="设置所选行数据到流量段" Grid.Column="1" Margin="1" Click="addData_Click"></Button>
        </Grid>

        <Button x:Name="ButtonListAlldata" Content="显示所有流量段" Grid.Row="12"  Width="200" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Click="ButtonListAlldata_Click"  Grid.Column="2" />
        <Button x:Name="ButtonSavedata" Content="保存数据到Lv.BIM文档" Grid.Row="12"  Width="200" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Click="ButtonSavedata_Click" Grid.Column="3" />

    </Grid>
</Window>
