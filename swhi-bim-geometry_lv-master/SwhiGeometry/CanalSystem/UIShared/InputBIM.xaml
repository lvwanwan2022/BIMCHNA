<Window x:Class="Swhi.UIShared.InputboxBIM"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Swhi.UIShared"
        mc:Ignorable="d"
        Title="输入"  Width="400" Closing="Window_Closing" SizeToContent="Height" ResizeMode="CanMinimize" KeyDown="Window_KeyDown">

    <Grid Name="gridMain">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="80"/>
            
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Name="stackMain" Grid.Row="0" Grid.ColumnSpan="2" Orientation="Vertical" Margin="10">
            <StackPanel.Resources>
                <Style TargetType="Label">
                    <Setter Property="HorizontalAlignment" Value="Left"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="Width" Value="150"></Setter>
                    <Setter Property="Height" Value="30"></Setter>
                </Style>
                <Style TargetType="TextBox">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="Width" Value="200"></Setter>
                    <Setter Property="Height" Value="30"></Setter>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                </Style>
            </StackPanel.Resources>
            <!--<StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="label1"></Label>
                <TextBox></TextBox>
            </StackPanel>-->
           
        </StackPanel >
        <Border Grid.Row="1" Grid.ColumnSpan="2" BorderBrush="LightGray" BorderThickness="1">
            <StackPanel  VerticalAlignment="Center">
                <Button Content="确认" Height="40" Margin="10" IsDefault="True" Click="Button_Click"></Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
