<Window x:Class="Swhi.UIShared.DataTableBIM"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Swhi.UIShared"
        mc:Ignorable="d"
        Title="DataTableBIM" Height="450" Width="800" Topmost="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="textblockmessage" Text="Message will be displayed here!!" VerticalAlignment="Center"></TextBlock>
        <DataGrid x:Name="DataGridmain" Grid.Row="1" SelectionChanged="DataGridmain_SelectionChanged"></DataGrid>
        <Button x:Name="ButtonSave" Grid.Row="2" Content="保存" Click="Button_Click"/>
    </Grid>
</Window>
